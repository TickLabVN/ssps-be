generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("POSTGRES_URL")
  relationMode = "foreignKeys"
}

model User {
  id       String @id @default(cuid())
  userName String @unique @map("userName") @db.VarChar(50)
  password String
  role     Int[]
}
